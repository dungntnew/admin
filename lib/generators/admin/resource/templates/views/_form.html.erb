
<%% 
	form_url = (action_name == "new") ? <%=create_path%>(@<%=model_name%>) : <%=update_path%>(@<%=model_name%>)
	
%>
<%%= form_for(@<%=model_name%>, url: form_url,  html: { class: 'form-horizontal' }) do |f| %>

<% attributes.each do |attribute| %>
<div class="form-group">
    <%%= f.label :<%=attribute%>, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%%= f.text_field :<%=attribute%>, class: 'form-control'  %>
    </div>
</div>

<% end %>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%%= f.submit action_name == "new" ? "Create" : "Update", class: "btn btn-primary" %>
    </div>
</div>
<%% end %>
