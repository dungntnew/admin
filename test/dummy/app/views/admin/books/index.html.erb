<h2>Admin Books</h2>

<table class="table table-striped">
  <thead>
    <tr>
	  
      <th>title</th>
	  
      <th>author</th>
	  
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book|%>
    <tr>
	  
		
			<td><%= book.title %></td>
		
	  
		
			<td><%= book.author %></td>
		
	  
      <td><%= link_to 'Edit', main_app.edit_admin_book_path(book) if current_user.can_update?(book) %></td>
      <td><%= link_to 'Destroy', main_app.admin_book_path(book), method: :delete, 
		data: { confirm: 'Are you sure?' } if current_user.can_delete?(book) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', main_app.new_admin_book_path if current_user.can_create?(Book) %>
